<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QRLector" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item> <!-- Cambiado a blanco para mejor contraste -->
        <item name="android:statusBarColor">@color/white</item> <!-- Agregado para la barra de estado -->
    </style>

    <style name="Theme.QRLector" parent="Base.Theme.QRLector">
        <!-- Dark theme customization -->
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/black</item> <!-- Fondo de la ventana -->
        <item name="android:actionBarStyle">@style/MyActionBar</item> <!-- Estilo de la ActionBar -->
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item> <!-- Fondo de la ActionBar -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item> <!-- Estilo de texto del título -->
    </style>

    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item> <!-- Color del texto del título -->
    </style>
</resources>
